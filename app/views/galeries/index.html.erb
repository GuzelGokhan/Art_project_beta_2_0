<div class="container">
  <div id="carouselExampleIndicators" class="h-100 carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @galeries.each do |galery| %>
      <% if galery.eql?(@galeries.first) %>
      <li data-target="#carouselExampleIndicators" data-slide-to=<%="#{galery.id}"%> class="active"></li>
      <% else %>
      <li data-target="#carouselExampleIndicators" data-slide-to=<%="#{galery.id}"%>></li>
      <%end%>
      <%end%>
    </ol>
    <div class="carousel-inner">
      <% @galeries.each do |galery| %>
      <% if galery.eql?(@galeries.first)%>
       <div class="carousel-item active">
        <%else%>
        <div class="carousel-item">
        <%end%>
          <%= cl_image_tag galery.photo.key, class: "d-block w-100", alt: galery.name %>
          <div class="carousel-caption" style="color: black;">
            <%= link_to  "#{galery.name}", galery_path(galery), class: "btn btn-light" %>
            <p><%= galery.location%></p>
          </div>
        </div>
        <%end%>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
